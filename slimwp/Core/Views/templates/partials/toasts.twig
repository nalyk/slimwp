<div aria-live="polite" aria-atomic="true" style="position: relative; z-index:999;">
  <div style="position: absolute; top: 1em; right: 1em;" id="toast-placeholder"></div>
</div>

{% verbatim %}
<script type="text/twig" id="toasts">
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="2500" style="min-width: 20em;">
      <div class="toast-header">
        <strong class="mr-auto">{{ title }}</strong>
        <small class="text-muted">just now</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
        {{ msg }}
      </div>
    </div>
</script>
{% endverbatim %}