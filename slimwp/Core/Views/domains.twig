{% extends '/Core/Views/templates/default.twig' %}

{% block content %}
        <section class="section">
          <div class="section-header">
            <h1>{{ __('Manage domains') }}</h1>
          </div>

          <div class="section-body">
            <form action="{{ url_for('core.domains.api01') }}" method="post" autocomplete="off" id="add_domain_form">
                          <div class="form-row">
                            <div class="form-group col-md-2">
                              <label>{{ __('Domain name') }}*</label>
                              <input type="text" class="form-control" name="name" required>
                            </div>

                            <div class="form-group">
                              <label class="form-label">{{ __('Add to domain after') }}</label>
                              <div class="selectgroup selectgroup-pills">
                                <label class="selectgroup-item">
                                  <input type="checkbox" name="signin" value="true" class="selectgroup-input" disabled="true">
                                  <span class="selectgroup-button selectgroup-button-icon">signin (autoadd)</span>
                                </label>
                                <label class="selectgroup-item">
                                  <input type="checkbox" name="invite" value="true" class="selectgroup-input" disabled="true">
                                  <span class="selectgroup-button selectgroup-button-icon">invite</span>
                                </label>
                              </div>
                            </div>

                            <div class="form-group col-md-1">
                              <label>&nbsp;</label><br>
                              <button type="submit" class="btn btn-primary btn-lg">{{ __('Save') }}</button>
                            </div>
                          </div>


            </form>

            <table class="table table-hover" id="core-accounts-col">
            <thead>
            <tr>
                <th>uid</th>
                <th>ts created</th>
                <th>ts updated</th>
                <th>name</th>
            </tr>
            </thead>
            {% for domain in domains %}
            <tr>
                <td>{{ domain.c_uid }}</a></td>
                <td>{{ domain.c_ts_created }}</a></td>
                <td>{{ domain.c_ts_updated }}</a></td>
                <td>{{ domain.c_name }}</a></td>
            </tr>
            {% endfor %}
            </table>

          </div>
        </section>
{% endblock %}
{% block additionaljs %}
  <script nonce="{{ csp_nonce.script_src }}">
  $(function(){
    $("#core-accounts-col").dataTable();
  });
  </script>
{% endblock %}
